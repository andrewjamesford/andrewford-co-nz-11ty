<!-- Chat Toggle Button -->
<button id="chat-toggle" class="chat-toggle" title="Chat with Andrew Ford" aria-label="Chat with Andrew Ford">
  <span class="sr-only">Chat with Andrew Ford</span>
</button>

<!-- Chat Container -->
<div id="chat-container" class="chat-container" style="display: none;">
  <div id="chat-messages" class="chat-messages"></div>
  <div class="chat-input-container">
    <textarea id="chat-input" placeholder="Enter your question here, and press Return or Shift+Enter for new line" class="chat-input" aria-label="Chat input field for entering your question"></textarea>
    <button id="chat-send" class="chat-send" type="button">Send</button>
  </div>
</div>