<!-- Chat Toggle Button -->
<button id="chat-toggle" style="position: fixed; bottom: 20px; right: 20px; z-index: 1000;">
  Chat
</button>

<!-- Chat Container -->
<div id="chat-container" style="display: none; position: fixed; bottom: 60px; right: 20px; width: 300px; height: 400px; border: 1px solid #ccc; background: #fff; z-index: 1000;">
    <div id="chat-messages" style="height: 350px; overflow-y: auto; padding: 10px;"></div>
    <input type="text" id="chat-input" placeholder="Type your message..." style="width: 100%; box-sizing: border-box; padding: 10px;"/>
</div>