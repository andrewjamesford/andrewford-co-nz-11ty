<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{{ title }} </title>
        <link rel="stylesheet" href="{{ '/css/style.css' }}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="{{ description }}">
    </head>
    <body>
        <header class="wrapper">          
            <div class="avatar-wrapper">
                <a href="{{ '/' }}">
                    <img class="avatar" src={{ '/images/andrew-emoji.webp '}} alt="Andrew's Avatar" width="112" height="112" />
                    <p class="hide">Home</p>
                </a>
                <h1 class="site-title">Andrew Ford</h1>
                <h2 class="site-description">Full Stack Developer from Tauranga, New Zealand</h2>
            </div>
            <nav>
                <ul class="nav-links">
                    {%- for page in collections.pages -%}
                    <li><a href="{{ page.url }}">{{ page.data.title }}</a></li>    
                    {%- endfor -%}    
                </ul>
            </nav>
        </header>
        <main class="wrapper">
            <article>
                <h1>{{ title }}</h1>

                {{ content }}
            </article>
        </main>
        <footer class="wrapper">
            <ul class="nav-links ">
                <li><a href="https://www.linkedin.com/in/andrewjamesford">LinkedIn</a></li>
                <li><a href="https://github.com/andrewjamesford">Github</a></li>
                <li><a href="mailto:me@andrewford.co.nz">Email</a></li>
                <li><a href="https://andrewford.co.nz/rss.xml">RSS</a></li>
            </ul>
        </footer>
    </body>
</html>