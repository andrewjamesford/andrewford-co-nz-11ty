---
layout: layouts/base.njk
---
{# Only include the syntax highlighter CSS on blog posts #}

{%- css "prism" %}{% include "public/css/prism-dracula.css" %}{% endcss %}
{%- css "prism" %}{% include "public/css/prism-diff.css" %}{% endcss %}

<link rel="stylesheet" href="{% getBundleFileUrl 'css', 'prism' %}" fetchpriority="low">

<h1>{{ title }}</h1>

<time datetime="{{ page.date | htmlDateString }}" class="article-datetime">{{ page.date | readableDate }}</time>

<article class="article">
	{{ content | safe }}
</article>

<dl class="article-tags">
	<dt>Tags:</dt>
	{%- for tag in tags | filterTagList %}
		{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
		<dd>&nbsp;{{ tag | slugify }}
			{%- if not loop.last %}, {% endif %}
		</dd>
	{%- endfor %}
</dl>