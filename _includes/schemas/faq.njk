{%- if faqItems and faqItems.length > 0 -%}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {%- for faq in faqItems -%}
    {
      "@type": "Question",
      "name": "{{ faq.question | safe }}",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "{{ faq.answer | safe }}"
      }
    }{%- if not loop.last -%},{%- endif -%}
    {%- endfor -%}
  ]
}
</script>
{%- endif -%}