---
# Metadata comes from _data/metadata.js
permalink: /feed/feed.json
---
{
	"version": "https://jsonfeed.org/version/1.1",
	"title": "Andrew Ford",
	"language": "en-NZ",
	"home_page_url": "https://andrewford.co.nz",
	"feed_url": "https://andrewford.co.nz/feed/feed.json",
	"description": "Andrew Ford is the host of Code with Andrew Ford, a YouTube channel dedicated to teaching you how to code, a software engineer, mentor and an educator.",
	"author": {
		"name": "Andrew Ford",
		"url": "me@andrewford.co.nz"
	},
	"items": [
{%- for post in collections.posts | reverse %}
{%- set absolutePostUrl = post.url | htmlBaseUrl(metadata.fullUrl) %}
		{
        "id": "{{ absolutePostUrl }}",
        "url": "{{ absolutePostUrl }}",
        "title": "{{ post.data.title }}",
        "content_html": {% if post.templateContent %}{{ post.templateContent | transformWithHtmlBase(absolutePostUrl, post.url) | dump | safe }}
	{% else %}""{% endif %},
        "date_published": "{{ post.date | dateToRfc3339 }}"
		}
		{% if not loop.last %},{% endif %}
{%- endfor %}
]	
}
