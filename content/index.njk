<section class="my-apps">
	<h2>Apps I Make</h2>
	<div class="my-apps-grid">
		<a href="https://apps.apple.com/us/app/health-scan-express/id6755371692" class="app-card no-hover">
			<img src="/images/health-scan-express-logo.svg" alt="Health Scan Express logo" class="app-logo" width="80" height="80">
