{
  "permissions": {
    "allow": [
      "mcp__playwright__browser_get",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_navigate",
      "Bash(npm run:*)",
      "Bash(netlify:*)",
      "Bash(curl:*)",
      "Bash(lsof:*)",
      "Bash(pkill:*)",
      "Bash(git worktree:*)",
      "Bash(npm audit:*)",
      "Bash(mkdir:*)",
      "Bash(node:*)",
      "Bash(git add:*)",
      "Bash(git rebase:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git stash:*)",
      "Bash(git commit:*)",
      "Bash(git rm:*)",
      "Bash(git push:*)"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(rmdir:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npm run prettier && npm run test"
          }
        ]
      }
    ]
  }
}