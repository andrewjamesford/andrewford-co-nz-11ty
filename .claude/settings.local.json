{
  "permissions": {
    "allow": [
      "mcp__playwright__browser_get",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_navigate",
      "Task",
      "Bash",
      "Glob",
      "Grep",
      "LS",
      "Read",
      "Edit",
      "MultiEdit",
      "Write",
      "WebFetch",
      "WebSearch"
    ],
    "deny": ["Bash(rm:*)", "Bash(rmdir:*)"]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npm run prettier && npm run test"
          }
        ]
      }
    ]
  }
}
