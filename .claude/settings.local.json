{
  "permissions": {
    "allow": [
      "mcp__playwright__browser_get",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_navigate",
      "Bash(npm run:*)",
      "Bash(netlify:*)",
      "Bash(curl:*)",
      "Bash(lsof:*)",
      "Bash(pkill:*)",
      "Bash(git worktree:*)",
      "Bash(npm audit:*)"
    ],
    "deny": ["Bash(rm:*)", "Bash(rmdir:*)"]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npm run prettier && npm run test"
          }
        ]
      }
    ]
  }
}
