// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node
{
	"name": "andrewford-co-nz-11ty",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/javascript-node:1-20-bookworm",
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "npm install",
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root",
	"runArgs": ["--name", "andrewford-co-nz-11ty"],
	"customizations": {
		"vscode": {
			"extensions": [
				"cbrevik.toggle-format-on-save",
				"DavidAnson.vscode-markdownlint",
				"yzhang.markdown-all-in-one",
				"treetrum.statusbar-format-on-save",
				"streetsidesoftware.code-spell-checker",
				"dbaeumer.vscode-eslint",
				"donjayamanne.githistory",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"okitavera.vscode-nunjucks-formatter",
				"esbenp.prettier-vscode",
				"ronnidc.nunjucks",
				"VASubasRaj.flashpost",
				"ms-azuretools.vscode-docker"
			]
		}
	},
	"features": {
		"ghcr.io/devcontainers-contrib/features/netlify-cli:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-community/features/deno:1": {
			"version": "latest"
		}
	}
}
